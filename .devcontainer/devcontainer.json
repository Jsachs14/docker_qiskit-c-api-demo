{
  "name": "qiskit-c-api-demo-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  // Use root so the Rust install from Dockerfile works without extra plumbing
  "remoteUser": "root",

  // Where the repo will live inside the container
  "workspaceFolder": "/workspaces/docker_qiskit-c-api-demo",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "ms-python.python"
      ]
    }
  },

  // After the container is built, init submodules automatically
  "postCreateCommand": "cd /workspaces/docker_qiskit-c-api-demo && git submodule update --init --recursive"
}
