{
  "name": "qiskit-c-api-demo-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "remoteUser": "root",
  "workspaceFolder": "/workspaces/docker_qiskit-c-api-demo",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "ms-python.python"
      ]
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh"
}
